platform :ios, '9.0'

def pods
    inhibit_all_warnings!
    use_frameworks!
    
    pod 'MGLoadMore', :git => 'https://github.com/HoaPham98/MGLoadMore.git', :branch => 'hoapq'
    
    pod 'RxSwift', '4.5'
    pod 'RxCocoa', '4.5'
    pod 'NSObject+Rx', '4.4'
    
    pod 'Then', '2.4'
    pod 'Reusable', '4.1.0'
    
    pod 'MBProgressHUD', '~> 1.1'
end
    
target 'MGArchitecture' do
    pods
end
